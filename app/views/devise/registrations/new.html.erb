<%= render "shared/second-header"%>
<div class="contents row">
  <div class="container">
    <h2 class = "devise-signin">会員情報入力</h2>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render 'shared/error_messages', model: f.object %>

      <div class="field">
        <label class="form-text">ニックネーム</label>
        <%= f.text_field :nickname, autofocus: true, class: "input-signup", maxlength: "40" %>
      </div>

      <div class="field">
        <label class="form-text">メールアドレス</label>
        <%= f.email_field :email, class: "input-signup" %>
      </div>

      <div class="field">
        <label class="form-text">パスワード</label>
        <% if @minimum_password_length %>
          <em class = "form-text-sub">(<%= @minimum_password_length %>文字以上の半角英数字)</em>
        <% end %>
        <%= f.password_field :password, class: "input-signup", autocomplete: "off" %>
      </div>

      <div class="field">
        <label class="form-text">パスワード(確認)</label>
        <%= f.password_field :password_confirmation, class: "input-signup", autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "サインイン", class: "input-sumbit" %>
      </div>
    <% end %>
  </div>
</div>
<%= render "shared/second-footer"%>