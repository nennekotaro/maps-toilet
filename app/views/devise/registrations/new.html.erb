<%= render "shared/header" %>
<div class="contents row">
  <div class="container">
    <h2>Sign up</h2>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :nickname %><br />
        <%= f.text_field :nickname, autofocus: true, class: "input-signup", maxlength: "40" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "input-signup" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上の半角英数字)</em>
        <% end %><br />
        <%= f.password_field :password, class: "input-signup", autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, class: "input-signup", autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "input-sumbit" %>
      </div>
    <% end %>
  </div>
</div>
<%= render "shared/footer" %>