<%= render "shared/second-header"%>
<div class="contents row">
  <div class="container">
    <div class = "devise-login">会員情報入力</div>
    <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <div class='login-flash-message'>
        <%= flash[:notice] %>
        <%= flash[:alert] %>
      </div>
       <%= render 'shared/error_messages', model: f.object %>
      <div class="field">
        <label class="form-text">メールアドレス</label><br />
        <%= f.email_field :email, class: "input-signup", autofocus: true %>
      </div>

      <div class="field">
        <label class="form-text">パスワード</label><br />
        <%= f.password_field :password, class: "input-signup", autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class: "input-sumbit" %>
      </div>
    <% end %>
  </div>
</div>
<%= render "shared/second-footer"%>