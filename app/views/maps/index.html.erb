<%# Googleマップの表示コード %>
<script>
  let map;
  let marker;
  const maps = gon.maps;

  // // トイレマーカーの情報を格納するオブジェクトを初期化する
  // let toiletMarkers = [];

  function initMap() {
    geocoder = new google.maps.Geocoder()
    
    map = new google.maps.Map(document.getElementById('maps'), {
      zoom: 15
    })

    // 現在地の取得を試みる
    if (navigator.geolocation) {
      navigator.geolocation.getCurrentPosition(function(position) {
        const pos = {
          lat: position.coords.latitude,
          lng: position.coords.longitude
        }

        // 現在地にマーカーを表示する
        marker = new google.maps.Marker({
          position: pos,
          map: map,
          icon: {
            url: '<%= image_path("toilet_gaman_boy.png") %>',
            scaledSize: new google.maps.Size(80, 80) // マーカーのサイズを指定する
          }
        })

        // トイレマーカーを表示する
        for (let i = 0; i < maps.length; i++) {
          // const toiletId = maps[i].id;
          marker = new google.maps.Marker({
          position: { lat: maps[i].latitude , lng: maps[i].longitude },
          map: map,
          icon: {
            url: '<%= image_path("toilet_kirei.png") %>',
            scaledSize: new google.maps.Size(40, 40) // マーカーのサイズを指定する
          }
          })
        }
        // toiletMarkers.push(toiletId);

        // // トイレマーカーがクリックされたときの処理
        // google.maps.event.addListener(marker, 'click', (function(toiletId) {
        // return function() {
        //   console.log('クリックされました');
        //   console.log(toiletId);
        //   // form変数に格納する処理を記述する
        // }
        // })(toiletId));

        // 地図の中心を現在地に設定する
        map.setCenter(pos);
      })
    }
  }
    </script>
    <!-- Maps JavaScript APIを読み込むスクリプトタグにAPIキーを指定する -->
